 

@model XoXBlogMono.Models.GeneralModel
@{
    ViewData["Title"] = "Home Page";
}



<!-- Page content-->
<div class="container pt-5">
  <div class="row">
    <!-- Blog entries-->
    <div class="col-lg-8">
      <div class="row">
    
          @foreach (var post in Model.Posts)
          {
            <div class="col-lg-6">
          <div class="card mb-4">
            <a href="#!"><img class="card-img-top" src="@post.BannerImage" alt="..." /></a>
            <div class="card-body">
              <div class="small text-muted">@post.CreatedAt.ToString("dd.MM.yyyy")</div>
              <h2 class="card-title h4">@post.Title</h2>
              <p class="card-text">@(post.Text.Length>100?post.Text.Substring(0, 100):post.Text) # @post.Category.Name</p>
              <a class="btn btn-primary" href="/category/@SeoUrl.GetSeoUrl(post.Category.Name)-@post.Category.Id/@SeoUrl.GetSeoUrl(post.Title)-@post.Id">Devamını Oku→</a>
            </div>
          </div>     
        </div>
          }
      </div>
    </div>
    <!-- Side widgets-->
    <div class="col-lg-4">
      <!-- Categories widget-->
      <div class="card mb-4">
        <div class="card-header">Categories v2</div>
        <div class="card-body p-0">
          <div class="list-group list-group-flush">
              @foreach (var category in Model.Categories)
                            {
                                <a class="list-group-item list-group-item-action list-group-item-light p-3 "
                                    href="/category/@SeoUrl.GetSeoUrl(category.Name)-@category.Id">@category.Name</a>
                            }
           
          </div>
        </div>
      </div> 
    </div>
  </div>
</div>
 